/**
 * Helper to retrieve course title
 *
 * @param int $nid
 * @return array
 */
function _mic_implementation_course_title($nid) {
  $result = db_query("SELECT title FROM {node} WHERE nid = :nid", array(':nid' => $nid))->fetchCol();
  return reset($result);
}